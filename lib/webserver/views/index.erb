<div id="main">
  <form id="data">
  <fieldset>
	<p class="block_h">Defaults</p>
		<table style="margin-left: 15px; width: 90%">
    	<tr>
				<td><%=label_tag 'Language'%></td>
        <td><%=text_field_tag 'language',:value=>"#{LANG}", :disabled => true, :size => "50"%></td>
			</tr>	
    	<tr>
				<td><%=label_tag 'Tarantula location'%></td>
				<td><%=text_field_tag 'tarantula_host',:value=>"#{TARANTULA_HOST}", :disabled => true, :size => "50"%></td>
			</tr>	
    	<tr>
				<td><%=label_tag 'Tarantula user'%></td>
				<td><%=text_field_tag 'tarantula_user',:value=>"#{TARANTULA_USER}", :disabled => true, :size => "50"%></td>
			</tr>	
    	<tr>
				<td><%=label_tag 'Tarantula project'%></td>
				<td><%=text_field_tag 'tarantula_project',:value=>"#{TARANTULA_PROJECT}", :size => "50"%></td>
			</tr>	
    </table>
  </fieldset>
  <fieldset>
	<p class="block_h">Remote tasks</p>
		<table style="margin-left: 15px; width: 90%">
    	<tr>
				<td><%=label_tag 'Tarantula test'%></td>
				<td><%=text_field_tag 'tarantula_test', :size => "50"%></td>
			</tr>	
    	<tr>
				<td><%=label_tag 'Tarantula tag'%></td>
				<td><%=text_field_tag 'tarantula_tag', :size => "50"%></td>
			</tr>	
    	<tr>
				<td><%=label_tag 'Tarantula execution'%></td>
				<td><%=text_field_tag 'tarantula_execution', :size => "50"%></td>
			</tr>
    </table>
    <p class="block_h" style="color: #A4A4A4">
      <button>Build</button>
      <button>Execute</button>
    </p>
  </fieldset>
  <fieldset>
	<p class="block_h">Local tasks</p>
    <p class="block_h" style="color: #A4A4A4">
      <button>Execute locally</button>
      <button>Generate</button>
      <button>List known</button>
      <button>Transliterate</button>
    </p>
  </fieldset>
    </form>
</div>

<div id="console">
	<p class="block_h" style="color: #A4A4A4">
		Console	
	</p>

  <div id='output'></div>	
</div>
